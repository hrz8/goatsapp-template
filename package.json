{
  "name": "goatsapp",
  "module": "esbuild.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hrz8/goatstrap.git"
  },
  "scripts": {
    "db:migration": "drizzle-kit generate:pg --config drizzle.config.ts",
    "db:migrate": "bun migrate.ts",
    "build:esbuild": "bun ./esbuild.ts",
    "build:tailwind": "tailwindcss -i ./assets/public/css/_app.bundle.css -o ./assets/public/css/app.bundle.css --minify"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.5",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.17",
    "drizzle-orm": "^0.30.9",
    "esbuild": "^0.20.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.2.0",
    "esbuild-style-plugin": "^1.6.3",
    "flowbite": "^2.3.0",
    "htmx.org": "^1.9.11",
    "pg": "^8.11.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}